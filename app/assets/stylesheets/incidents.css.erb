* {
  padding: 0;
  margin: 0;
}

html {
  background: url(<%= asset_path 'sick.jpg' %>) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

body {
  padding: 200px 0;
  color: #fff;
  text-align: center;
}

h1, h2 {
  text-shadow: 0 0 1px #000;
  -webkit-text-stroke: 1px rgba(0,0,0,.5);
}

h1 {
  font: bolder 48px/2 Ubuntu, sans-serif;
  text-shadow: 0 0 1px #000, 0 0 5px #000;
}

h2 {
  font: normal 350px/1 Lobster, cursive;
  text-shadow: 0 0 1px #000, 0 0 20px #000;
}

input {
  font: bolder 48px/2 Ubuntu, sans-serif;
}